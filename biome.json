{
	"$schema": "https://biomejs.dev/schemas/2.2.7/schema.json",
	"files": {
		"includes": ["**/*.{js,cjs,mjs,ts,tsx,mts}"]
	},
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": false
	},
	"overrides": [
		{
			"includes": [
				"coverage/**",
				"playwright-coverage/**",
				"docs/**",
				"web/dist/**",
				"node_modules/**",
				"**/package-lock.json"
			],
			"linter": { "enabled": false },
			"formatter": { "enabled": false }
		}
	]
}
